@inject IHttpContextAccessor HttpContextAccessor
@inject RequestStore RequestStore

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <PageTitle>Symo - template</PageTitle>
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)"/>
            <FocusOnNavigate RouteData="@routeData" Selector="h1"/>
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <p role="alert">Sorry, there's nothing at this address.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>

@code {
    protected override void OnInitialized() {
        RequestStore.Request = HttpContextAccessor.HttpContext?.Request;
        RequestStore.IpAddress = HttpContextAccessor.HttpContext?.Connection.RemoteIpAddress;
    }

}